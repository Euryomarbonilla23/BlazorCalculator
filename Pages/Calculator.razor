@page "/calculator"
<h3>Calculator</h3>
<div class="container-fluid">
    <div class="form-group">
        <label>Primer Numero</label>
        <input type="text" id="txtPrimerNumero" @bind-value="primerNumero"/>
    </div>
    <div class="form-group">
        <label>Segundo Numero</label>
        <input type="text" id="txtSegundoNumero" @bind-value="segundoNumero" />
    </div>
    <div class="btn-group">
        <button class="btn btn-secondary" @onclick="calculate"> Calcular</button>
    </div>
    <div class="form-group">
        <p>La suma es: @resSuma</p>
        <p>La resta es: @resResta</p>
        <p>La multiplicacion es: @resMult</p>

    </div>
</div>

@code {
    int primerNumero = 0;
    int segundoNumero = 0;
    int resSuma = 0;
    int resResta = 0;
    int resMult = 0;

    public void calculate()
    {
        resSuma = primerNumero + segundoNumero;
        resResta = primerNumero - segundoNumero;
        resMult = primerNumero * segundoNumero;
    }

}
